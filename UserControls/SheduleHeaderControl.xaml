<UserControl x:Class="DoctorScheduleApp.UserControls.SheduleHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoctorScheduleApp.UserControls"
             mc:Ignorable="d" DataContextChanged="UserControl_DataContextChanged">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="BlockDay" Style="{StaticResource BlockHeaderDay}" Text="СБ"/>
        <TextBlock x:Name="BlockDate"  Style="{StaticResource BlockCommon}" Width="auto" Text="11 декабря" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
